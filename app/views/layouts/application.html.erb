<!DOCTYPE html>
<html>
  <head>
    <title>Luppul</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= link_to "Log out", logout_path, method: :delete %>
    <% end %>
    <% flash.each do |_, message| %>
      <div><%= message %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
